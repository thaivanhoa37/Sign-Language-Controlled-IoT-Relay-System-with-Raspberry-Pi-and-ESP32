    {
        "id": "update_gesture_status",
        "type": "function",
        "z": "main_flow",
        "name": "Cập nhật trạng thái",
        "func": "const gestures = {\n    0: 'Cử chỉ 1: Bật R1, Tắt R2',\n    1: 'Cử chỉ 2: Tắt R1, Bật R2',\n    2: 'Cử chỉ 3: Bật cả hai Relay',\n    3: 'Cử chỉ 4: Tắt cả hai Relay'\n};\nreturn { payload: gestures[msg.payload] || 'Không nhận diện được' };",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 340,
        "y": 60,
        "wires": [["gesture_status"]]
    },
    {
        "id": "update_switches",
        "type": "function",
        "z": "main_flow",
        "name": "Cập nhật công tắc",
        "func": "const msgs = [];\nif (msg.topic === 'home/relay1') {\n    msgs.push({payload: msg.payload === 'ON', topic: msg.topic});\n}\nif (msg.topic === 'home/relay2') {\n    msgs.push({payload: msg.payload === 'ON', topic: msg.topic});\n}\nreturn [msgs];",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 340,
        "y": 180,
        "wires": [["relay1_switch", "relay2_switch"]]
    }
]
