    {
        "id": "gesture_processor",
        "type": "function",
        "z": "main_flow",
        "name": "Xử lý cử chỉ",
        "func": "// Phân tích cử chỉ\nconst gesture = parseInt(msg.payload);\n\n// Chuyển đổi cử chỉ thành lệnh điều khiển relay\nswitch(gesture) {\n    case 0: // Cử chỉ 1: Bật relay 1, tắt relay 2\n        return [\n            {topic: 'home/relay1', payload: 'ON'},\n            {topic: 'home/relay2', payload: 'OFF'}\n        ];\n    case 1: // Cử chỉ 2: Tắt relay 1, bật relay 2\n        return [\n            {topic: 'home/relay1', payload: 'OFF'},\n            {topic: 'home/relay2', payload: 'ON'}\n        ];\n    case 2: // Cử chỉ 3: Bật cả hai relay\n        return [\n            {topic: 'home/relay1', payload: 'ON'},\n            {topic: 'home/relay2', payload: 'ON'}\n        ];\n    case 3: // Cử chỉ 4: Tắt cả hai relay\n        return [\n            {topic: 'home/relay1', payload: 'OFF'},\n            {topic: 'home/relay2', payload: 'OFF'}\n        ];\n    default:\n        return null;\n}",
        "outputs": 1,
        "noerr": 0,
        "initialize": "",
        "finalize": "",
        "libs": [],
        "x": 340,
        "y": 120,
        "wires": [["mqtt_out", "update_switches"]]
    },
    {
        "id": "mqtt_out",
        "type": "mqtt out",
